{%- style -%}
  #shopify-section-{{ section.id }} {
    --hover-color: {{ section.settings.hover_color.red }}, {{ section.settings.hover_color.green }}, {{ section.settings.hover_color.blue }};
    --button-color: {{ section.settings.button_color.red }}, {{ section.settings.button_color.green }}, {{ section.settings.button_color.blue }};
  }
{%- endstyle -%}

{{ 'product-card.css' | asset_url | stylesheet_tag }}

<div class="container">
  {% if section.settings.title != blank or section.settings.description != blank %}
    <div class="product-list-title">
      <div class="title-wrapper">
        <h1>{{ section.settings.title }}</h1>
        <div class="product-list-description">
          {{ section.settings.description }}
        </div>
      </div>
    </div>
  {% endif %}
  {% if section.blocks.size > 0 %}
    <div class="swiper product-swiper">
      <div class="swiper-wrapper main-swiper">
        {% for block in section.blocks %}
          {% assign product = block.settings.product %}
          <div class="swiper-slide product-slide" {{ block.shopify_attributes }}>
            <div class="slide-container">
              <div class="image-container">
                {% if block.settings.discount_value != blank %}
                  {% assign ceil_prise = product.price | divided_by: block.settings.discount_value | round: 2 | money %}
                  <div class="sale-price-container">
                    <div class="price-container">{{ ceil_prise }}</div>
                    <p class="text-container">{{ block.settings.text_discount }}</p>
                  </div>
                {% endif %}
                {% if product.featured_image != blank %}
                  <img
                    src="{{ product.featured_media | image_url: width: 270 }}"
                    alt="{{ product.featured_media.alt }}"
                    loading="lazy"
                    width="270"
                    height="217"
                  >
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                <div class="product-tag-container">
                  {% for item in product.metafields.custom.tags.value %}
                    <div class="product-tag">
                      <img
                        src="{{ item.icon | image_url: width: 18 }}"
                        alt="{{ item.icon.alt }}"
                        loading="lazy"
                        width="18"
                        height="17"
                      >
                      <span>{{ item.tag }}</span>
                    </div>
                  {% endfor %}
                </div>
              </div>
              <div class="product-price">
                <span>
                  {{ product.title }}
                </span>
                <div>{{ product.price | money }}</div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination product-card-swiper-pagination"></div>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="button-product-list">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  {% endif %}
</div>

<script src="{{ 'product-swiper.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Product list section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "hover_color",
      "label": "Hover color",
      "default": "#FFF9C0"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#00AFA9"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Cared",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "number",
          "id": "discount_value",
          "label": "Discount value"
        },
        {
          "type": "text",
          "id": "text_discount",
          "label": "Text discount"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product list section"
    }
  ]
}
{% endschema %}
